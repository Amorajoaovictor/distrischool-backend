{
  "uid": "distrischool-service-overview",
  "title": "DistriSchool - Service Overview",
  "tags": ["distrischool","service"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "10s",
  "templating": {
    "list": [
      {
        "name": "instance",
        "label": "Instance",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(instance)",
        "includeAll": false,
        "multi": false,
        "allFormat": "glob"
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Service Metrics",
      "gridPos": {"h": 1, "w": 24, "x": 0, "y": 0}
    },
    {
      "type": "timeseries",
      "title": "Requests per second (by URI)",
      "targets": [
        {
          "expr": "sum by (uri) (rate(http_server_requests_seconds_count{instance=~\"$instance\"}[1m]))",
          "legendFormat": "{{uri}}",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 8, "w": 24, "x": 0, "y": 2}
    },
    {
      "type": "timeseries",
      "title": "Average Request Duration (s)",
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_sum{instance=~\"$instance\"}[5m])) / sum(rate(http_server_requests_seconds_count{instance=~\"$instance\"}[5m]))",
          "legendFormat": "avg duration",
          "refId": "B"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10}
    },
    {
      "type": "timeseries",
      "title": "JVM Memory Used (bytes)",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{instance=~\"$instance\"}",
          "legendFormat": "{{id}}",
          "refId": "C"
        }
      ],
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10}
    },
    {
      "type": "timeseries",
      "title": "Process CPU (1m rate)",
      "targets": [
        {
          "expr": "rate(process_cpu_seconds_total{instance=~\"$instance\"}[1m])",
          "legendFormat": "{{instance}}",
          "refId": "D"
        }
      ],
      "gridPos": {"h": 5, "w": 12, "x": 0, "y": 18}
    },
    {
      "type": "stat",
      "title": "Service Up",
      "targets": [
        {
          "expr": "max by (instance) (up{instance=~\"$instance\"})",
          "refId": "E"
        }
      ],
      "gridPos": {"h": 5, "w": 12, "x": 12, "y": 18}
    }
  ]
}
