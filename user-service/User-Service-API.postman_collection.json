{
  "info": {
    "name": "User Service API",
    "description": "API for user management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "user-service-v1"
  },
  "item": [
    {
      "name": "Health & Monitoring",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/actuator/health",
              "host": ["{{base_url}}"],
              "path": ["actuator", "health"]
            },
            "description": "Verifica se a aplicação está rodando e saudável"
          },
          "response": []
        },
        {
          "name": "Actuator Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/actuator",
              "host": ["{{base_url}}"],
              "path": ["actuator"]
            },
            "description": "Informações sobre a aplicação"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users - CRUD",
      "item": [
        {
          "name": "Criar User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"user_id\", jsonData.id);",
                  "    pm.test(\"User criado com sucesso\", function () {",
                  "        pm.expect(jsonData.id).to.exist;",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"João Silva\",\n  \"email\": \"joao@example.com\",\n  \"senha\": \"password123\",\n  \"role\": \"STUDENT\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users",
              "host": ["{{base_url}}"],
              "path": ["api", "users"]
            },
            "description": "Cria um novo usuário"
          },
          "response": []
        },
        {
          "name": "Buscar User por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            },
            "description": "Busca um usuário específico pelo ID"
          },
          "response": []
        },
        {
          "name": "Editar User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"João Silva Atualizado\",\n  \"email\": \"joao.updated@example.com\",\n  \"senha\": \"newpassword123\",\n  \"role\": \"TEACHER\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            },
            "description": "Atualiza os dados de um usuário existente"
          },
          "response": []
        },
        {
          "name": "Excluir User",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "{{user_id}}"]
            },
            "description": "Remove um usuário do sistema"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Testes de Erro",
      "item": [
        {
          "name": "Buscar ID Inexistente",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/users/99999",
              "host": ["{{base_url}}"],
              "path": ["api", "users", "99999"]
            },
            "description": "Deve retornar 404 Not Found"
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "1",
      "type": "string"
    }
  ]
}